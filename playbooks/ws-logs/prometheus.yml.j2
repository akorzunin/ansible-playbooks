global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "nodeexporter"
    static_configs:
      - targets: ["nodeexporter:9100"]

  - job_name: "cadvisor"
    static_configs:
      - targets: ["cadvisor:8080"]

  - job_name: "nvidia-gpu-exporter"
    static_configs:
      - targets: ["nvidia-gpu-exporter:9835"]

  - job_name: "nodeexporter-pi"
    static_configs:
      - targets: ["{{ HOST_LOCAL_PI_IP }}:9100"]

  - job_name: "cadvisor-pi"
    static_configs:
      - targets: ["{{ HOST_LOCAL_PI_IP }}:3003"]

  - job_name: "nodeexporter-sw1"
    static_configs:
      - targets: ["{{ HOST_SW1_IP }}:9100"]

  - job_name: "cadvisor-sw1"
    static_configs:
      - targets: ["{{ HOST_SW1_IP }}:3003"]

  - job_name: "nodeexporter-pl1"
    static_configs:
      - targets: ["{{ HOST_PL1_IP }}:9100"]

  - job_name: "cadvisor-pl1"
    static_configs:
      - targets: ["{{ HOST_PL1_IP }}:3003"]

  - job_name: "nodeexporter-kr1"
    static_configs:
      - targets: ["{{ HOST_KR1_IP }}:9100"]

  - job_name: "cadvisor-kr1"
    static_configs:
      - targets: ["{{ HOST_KR1_IP }}:3003"]
